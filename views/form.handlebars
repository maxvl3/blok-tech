<header>
    <h1>ZoekOppas</h1>
</header>

<section class="registeren">
    <h2>Gebruiker toevoegen</h2>
    <form action="/", method="POST">
        <div>
            <label for="voornaam">Voornaam</label>
            <input type="text" name="voornaam" required>
        </div>
        <div>
            <label for="achternaam">Achternaam</label>
            <input type="text" name="achternaam" required>
        </div>
        <div>
            <label for="geboortedatum">Geboortedatum</label>
            <input type="date" name="geboortedatum" required>
        </div>
        <div>
            <label for="geslacht">Geslacht</label>
            <div>   
                <input type="radio" name="geslacht" value="man" required>Man
                <input type="radio" name="geslacht" value="vrouw" required>Vrouw
            </div>       
        </div>
        <div class="beschikbaar">
            <label for="beschikbaar">Beschikbaar</label>
            <div>   
                <input type="checkbox" name="beschikbaar" value="maandag">Maandag<br>
                <input type="checkbox" name="beschikbaar" value="dinsdag">Dinsdag<br>
                <input type="checkbox" name="beschikbaar" value="woensdag">Woensdag<br>
                <input type="checkbox" name="beschikbaar" value="donderdag">Donderdag<br>
            </div>
            <div>
                <input type="checkbox" name="beschikbaar" value="vrijdag">Vrijdag<br>
                <input type="checkbox" name="beschikbaar" value="zaterdag">Zaterdag<br>
                <input type="checkbox" name="beschikbaar" value="zondag">Zondag
            </div>       
        </div>
        <div>
            <label for="uurtarief">Uurtarief</label>
            <input type="number" name="uurtarief" min="1" max="100" step="0.5" placeholder="â‚¬" required>
        </div>
        <button type="submit">Toevoegen</button>
    </form>
</section>

